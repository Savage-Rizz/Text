            text-align: center;
        }
        h1 {
            color: #d32f2f;
            margin-bottom: 30px;
        }
        .question-container {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin-bottom: 20px;
            min-height: 150px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .question {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
        }
        button {
            padding: 10px 25px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s;
        }
        .yes-btn {
            background-color: #4caf50;
            color: white;
        }
        .no-btn {
            background-color: #f44336;
            color: white;
        }
        button:hover {
            opacity: 0.8;
            transform: scale(1.05);
        }
        .progress {
            margin-bottom: 20px;
            font-weight: bold;
            color: #d32f2f;
        }
        .result {
            display: none;
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .score {
            font-size: 28px;
            font-weight: bold;
            color: #d32f2f;
            margin: 10px 0;
        }
        .result-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 15px;
            color: #d32f2f;
        }
        .result-text {
            margin-bottom: 20px;
        }
        .pickup-line {
            font-style: italic;
            margin: 20px 0;
            padding: 10px;
            background-color: #f8f8f8;
            border-left: 4px solid #d32f2f;
        }
        .restart-btn {
            background-color: #2196f3;
            color: white;
            margin-top: 20px;
        }
        .bonus-question {
            color: #2e7d32;
            font-weight: bold;
        }
